{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "pack-to-disk",
			"command": "exe2adf",
			"type": "shell",
			"args": [
				"-i",
				"${workspaceFolder}/uae/dh0/tte-circumvent",
				"-a",
				"${workspaceFolder}/uae/dh0/TTE-Circumvent.adf"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"dependsOn": [
				"pack"
			]
		},
		{
			"label": "pack",
			"command": "shrinkler",
			"type": "shell",
			"args": [
				"-o",
				"-h",
				"-f",
				"0xdff186",
				"${workspaceFolder}/uae/dh0/tinytro",
				"${workspaceFolder}/uae/dh0/TTE-Circumvent"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"dependsOn": [
				"build-tinytro"
			]
		},
		{
			"label": "asm-tinytro",
			"type": "shell",
			"command": "vasmm68k_mot",
			"args": [
				"tinytro.asm",
				"-o",
				"build\\tinytro.o",
				"-m68000",
				"-Fhunk",
				"-linedebug",
				"-ignore-mult-inc",
				"-nowarn=2047",
				"-nowarn=2069"
			],
			"group": "build"
		},
		{
			"label": "asm-wrapper",
			"type": "shell",
			"command": "vasmm68k_mot",
			"args": [
				"intro-wrapper.asm",
				"-o",
				"build\\intro-wrapper.o",
				"-m68000",
				"-Fhunk",
				"-linedebug",
				"-ignore-mult-inc",
				"-nowarn=2047",
				"-nowarn=2069"
			],
			"group": "build"
		},
		{
			"label": "build-tinytro",
			"type": "shell",
			"command": "vlink",
			"args": [
				"build\\tinytro.o",
				"-ouae\\dh0\\tinytro",
				"-bamigahunk",
				"-Bstatic"
			],
			"group": "build",
			"dependsOn": "asm-tinytro",
			"problemMatcher": []
		},
		{
			"label": "asm-tinytro-builtin",
			"type": "shell",
			"command": "${config:amiga-assembly.binDir}/vasmm68k_mot",
			"args": [
				"tinytro.asm",
				"-o",
				"build\\tinytro.o",
				"-m68000",
				"-Fhunk",
				"-linedebug",
				"-ignore-mult-inc",
				"-nowarn=2047",
				"-nowarn=2069"
			],
			"group": "build"
		},
		{
			"label": "build-tinytro-builtin",
			"type": "shell",
			"command": "${config:amiga-assembly.binDir}/vlink",
			"args": [
				"build\\tinytro.o",
				"-ouae\\dh0\\tinytro",
				"-bamigahunk",
				"-Bstatic"
			],
			"group": "build",
			"dependsOn": "asm-tinytro-builtin",
			"problemMatcher": []
		},
	]
}